<div class="container" id="sign-up-form">
  <div class="row">
    <h1>Make a Post</h1>
    <h3>Posting to: <%= @council.title %></h3>

    <div class="col-sm-offset-4 col-sm-4">
      <h3></h3> 

      <%= bootstrap_form_for(@post, 
                             url: council_posts_path(@council, @post)) do |f| %>

        <%= f.text_field  :title,
				                  placeholder: 'Post Title', 
                	        class: 'form-control',
                          required: 'true' %>
        
        <%= f.text_area   :content,
				                  placeholder: 'Post Content', 
                	        class: 'form-control',
                          required: 'true' %>
        
        <%= f.check_box   :motion %>
        
        <%= f.check_box   :closed %>

        <%= f.submit 'Post to Council', class: 'btn sign-up-button' %>
      <% end %>
      <%= link_to 'Back', :back %>
    
    </div>
  </div>
</div>