<div class='row'>
   	<div class='col-sm-offset-2 col-sm-8'>
   	  <h3>Cast your vote on this Motion!</h3>
      <%= bootstrap_form_for(@mot_vote, 
                             :url => council_post_mot_votes_path(@council, @post, @mot_vote)) do |f| %>

      <%= f.select  :vote, ['Approve', 'Reject', 'Delay', 'Abstain' ] %>
	        
	  <div class='row'>
   		<div class='col-sm-offset-4 col-sm-4'>
      		<%= f.submit 'Vote Now', class: 'btn sign-up-button' %>
   	  	</div>
   	  </div>

      <% end %>
   	</div>
</div>
    
