<div class="container" id="sign-up-form">
  <div class="row">
    <h1>Create a new Position</h1>
    
    <h3></h3>

    <div class="col-sm-offset-4 col-sm-4">
      <h3></h3> 

      <%= bootstrap_form_for(@position, 
                             :url => council_positions_path(@council, @position)) do |f| %>

        <%= f.text_field 	:title,
				         	placeholder: 'Position Title', 
                	      	class: 'form-control',
                	      	required: 'true' %>
        
        <%= f.text_area 	:description,
				        	placeholder: 'Position Description', 
                	      	class: 'form-control',
                	      	required: 'true' %>
		
        <%= f. check_box 	:appointed,
        					label: "Is this position appointed?" %>

        <%= f.submit 'Create Position', class: 'btn button-standard form-control' %>
      
      <% end %>

      <%= link_to 'Back', council_positions_path(@council) %>

    
    </div>
  </div>
</div>