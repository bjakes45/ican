<div class="col-sm-4 single-position-card" id=""+<%= council_position_path(position.council.id, position.id) %>+"">
  <div class="card">
    <div class="card-block">
      <h4 class="position-text">
        <%= truncate(position.title, :length => 60) %>
      </h4>
      <div class="position-content">
        <div class="posted-by">Created by <%= position.user.name %></div>
        <h3> <%= position.title %></h3> 
        <p><%= position.description %></p>
        <%= link_to "I'm interested", council_position_path(position.council, position), class: 'interested' %>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-4 -->